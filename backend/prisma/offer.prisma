enum OfferStatus {
    PENDING
    ACCEPTED
    REJECTED
}



model Offer{
    id       Int      @id @default(autoincrement())
    createdAt    DateTime @default(now())
    price         Float
    offerStatus        OfferStatus @default(PENDING)

    // made by user
    userId      Int
    user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

    // negotiated with agent / agency
    agentId     Int
    agent       Agent        @relation(fields: [agentId], references: [id], onDelete: Restrict)

    // for advertisement
    advertisementId Int
    advertisement   Advertisement @relation(fields: [advertisementId], references: [id], onDelete: Cascade)


    @@index([userId])
    @@index([agentId])
    @@index([advertisementId])
    @@map("offer")  

}