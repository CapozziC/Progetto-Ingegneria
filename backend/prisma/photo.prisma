enum PhotoFormat {
    JPEG
    PNG
}
model Photo{
    id       Int      @id @default(autoincrement())
    url             String
    description     String?
    position        Int
    format          PhotoFormat
    
    // Relation with advertisement
    advertisementId Int
    advertisement Advertisement @relation(fields: [advertisementId], references: [id], onDelete: Cascade)
    
    @@index([advertisementId])
    @@map("photo")
}

