enum AuthProvider {
  GOOGLE
  FACEBOOK
  GITHUB
}


model ProviderAccount {
  id            Int      @id @default(autoincrement())
  provider        AuthProvider
  token           String
  authDate        DateTime @default(now())

  // Relation with user
  userId        Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("provider_account")
}