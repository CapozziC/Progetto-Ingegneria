enum TypeAdvertisement {
  SALE
  RENT
}

enum StatusAdvertisement {
  ACTIVE
  INACTIVE
}

model Advertisement {
  id_advertisement            Int @id @default(autoincrement())
  description                 String
  price                       Float
  type_adv                    TypeAdvertisement
  created_at                  DateTime @default(now())
  updated_at                  DateTime @updatedAt
  status_adv                  StatusAdvertisement @default(ACTIVE)

    // Relation with user 
    id_user Int
    user User @relation(fields: [id_user], references: [id_user])
    // Relation with property
    id_property Int @unique
    property Property @relation(fields: [id_property], references: [id_property])
    // Relation with agent
    id_agent Int
    agent Agent @relation(fields: [id_agent], references: [id_agent])

    photos        Photo[]
    offers        Offer[]
    appointments  Appointment[]


    @@index([id_agent])
    @@index([id_user])
    @@map("advertisement")
}


