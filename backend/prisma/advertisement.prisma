enum TypeAdvertisement {
  SALE
  RENT
}

enum StatusAdvertisement {
  ACTIVE
  INACTIVE
}

model Advertisement {
  id                         Int @id @default(autoincrement())
  description                String
  price                      Float
  typeAdv                    TypeAdvertisement
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt
  statusAdv                  StatusAdvertisement @default(ACTIVE)
    
    //Relation with user 
    userId Int
    user User @relation(fields: [userId], references: [id])
    // Relation with real estate
    realEstateId Int @unique
    realEstate  RealEstate @relation(fields: [realEstateId], references: [id])
    // Relation with agent
    agentId Int
    agent Agent @relation(fields: [agentId], references: [id])

    photos        Photo[]
    offers        Offer[]
    appointments  Appointment[]


    @@index([agentId])
    @@index([userId])
    @@map("advertisement")
}


